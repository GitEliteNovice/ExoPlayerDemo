<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioInViewPagerExo.RingtoneActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_marginRight="5dp"
        android:background="#000"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toLeftOf="@id/ll_move_back"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="vertical">



    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_move_back"
        android:background="#000"
        android:alpha="0.6"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toLeftOf="@id/btnPlay"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/ic_fast_rewind"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <!--
    <ImageButton android:id="@+id/btnPlay"
        style="@android:style/MediaButton.Play"
         android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        />
-->
    <LinearLayout
        android:id="@+id/btnPlay"
        android:background="#000"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_icon"
            android:src="@drawable/ic_play_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/ll_move_forward"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="#000"
        android:alpha="0.6"
        android:layout_toRightOf="@id/btnPlay"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/ic_fast_forward"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_marginLeft="5dp"
        android:background="#000"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toRightOf="@id/ll_move_forward"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/ic_share"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>



    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_centerVertical="true"
        android:id="@+id/image_downloading_progress_layout"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        >
